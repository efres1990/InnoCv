<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            tools:src="@drawable/ic_circle_shape_outline" />

        <LinearLayout
            android:id="@+id/ly_user"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_userlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_user"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_user"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_option"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:visibility="visible"
                tools:drawableRight="@drawable/ic_menu" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>